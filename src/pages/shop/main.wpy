<script>
import wepy from 'wepy';
import wxRequest from '../../utils/http.js';
import api from '../../utils/api.js';
export default class shop extends wepy.page {
  config={
    navigationBarTitleText:'积分商城'
  }
  data = {
     signList:[{
       icon:'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-bg.png',
       text: "第1天",
       activebg: 'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-active-bg.png',
       active: false,
       count: 20
     },{
       icon:'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-bg.png',
       text: "第2天",
       activebg: 'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-active-bg.png',
       active: false,
       count: 30
     },{
       icon:'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-bg.png',
       text: "第3天",
       activebg: 'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-active-bg.png',
       active: false,
       count: 40
     },{
       icon:'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-bg.png',
       text: "第4天",
       activebg: 'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-active-bg.png',
       active: false,
       count: 50
     },{
       icon:'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-bg.png',
       text: "第5天",
       activebg: 'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-active-bg.png',
       active: false,
       count: 60
     },{
       icon:'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-bg.png',
       text: "第6天",
       activebg: 'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-active-bg.png',
       active: false,
       count: 80
     },{
       icon:'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-bg.png',
       text: "第7天及以上",
       activebg: 'http://p766oymet.bkt.clouddn.com/nvzhu/shop-sign-active-bg.png',
       active: false,
       count: 100
     }],
     jiFenPop: false,           // 积分弹层
     is_sign: false,            // 今日是否签到
     total_sign: 0,             // 总签到天数
     continue_sign: 0,          // 连续签到天数
     showExperience: false,     // 规则弹层
     integral: 0,               // 当前持有积分
     myExperence: false,         // 积分明细
     today_integral: 0,         // 今日获得积分
     total_integral: 0,         // 总积分
     signDetail:[],             // 积分记录
     page: 2,                   // 数据分页
     loadEnd: true              // 防止重复加载数据
  }
  methods={
    // 打卡弹层
    openLvRule(){
        this.jiFenPop = !this.jiFenPop;
        this.$apply();
    },

    // 去首页
    toIndex(){
      wx.switchTab({
        url: '../index/main'
      })
    },
    
    // 签到
    async signChunk(){
    let chunk = await wxRequest(api.chunk,{},'POST');
    if(chunk.data.code===api.STATUS){
      console.log('chunk', chunk)
      let signList = this.signList;
      for(let i=0;i<chunk.data.data.continue_sign;i++){
        if(signList[i]){
          signList[i].active = true;
        }
      }
      this.jiFenPop = !this.jiFenPop;
      this.signList = signList;
      this.is_sign = 1;
      this.continue_sign = chunk.data.data.continue_sign;
      this.total_sign = chunk.data.data.total_sign;
      this.$apply();
    }
  },
  
  // 关闭/打开规则
  closeExperience(){
     this.showExperience = !this.showExperience;
     this.$apply();
  },

  // 关闭/打开积分明细
  async openMyExperence(){
    this.myExperence = !this.myExperence;
    this.$apply();

    let signData = await this.getSignDetail(1);
    this.today_integral = signData.today_integral;
    this.total_integral = signData.total_integral;
    this.signDetail = signData.list;
    this.$apply();
  },

  async loadMore(){
     if(this.loadEnd){
       this.loadEnd = false;
       this.$apply();

      let signData = await this.getSignDetail(this.page);
      let oldList = this.signDetail;
      this.page++;
      this.loadEnd = true;
      this.today_integral = signData.today_integral;
      this.total_integral = signData.total_integral;
      this.signDetail = [...oldList,...signData.list];
     }
  }
   
  }

  async onShow(){
    let json = await wxRequest(api.signstatus, {}, 'POST');
    // console.log('json', json);
    if(json.data.code === api.STATUS){
      this.is_sign = json.data.data.is_signin;
      this.integral = json.data.data.integral;
      this.$apply();
    }

    
  }

  // 获取积分数据
  async getSignDetail(page){
    let signin = await wxRequest(api.integraldetail,{page:page,page_size:15},'POST');
    if(signin.data.code === api.STATUS){
       return signin.data.data;
    } 
  }

  

  async onPullDownRefresh(){
     wx.stopPullDownRefresh()
  }
}
</script>

