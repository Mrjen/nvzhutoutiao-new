        this.toastJiFen = myToast.toastJiFen;
        this.toastJingyan = myToast.toastJingyan;
        this.toastShow = true;
        setTimeout(() => {
          that.toastShow = false;
          that.$apply();
        }, 2000);
        this.$apply();
    }
    
  }

