    Article_liketimes: '',         // 文章喜欢次数
    Article_readtimes: 0,          // 文章阅读次数
    Article_createtime: '',        // 文章发布时间
    Article_sharetimes: 0,         // 文章分享次数
    Article_author: '',            // 文章作者
    Article_cover: null,           // 文章封面
