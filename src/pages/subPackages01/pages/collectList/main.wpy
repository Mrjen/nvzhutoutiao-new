                    data-inidx="{{indx}}"
                    data-outidx="{{idx}}"
                    data-id="{{list.kind_id}}"
                    data-reid="{{list.kind_id}}"
                    style="{{list.txtStyle}}">
                  <view class="item-content">
                      <view class="content-left">
                       <view class="title title2" wx:if="{{!item.sliderDown}}">{{list.title}}</view>
                       <view class="info">
