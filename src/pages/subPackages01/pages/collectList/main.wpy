                     </view>
                     <!-- <view class="title" wx:else>222222</view> -->
                  </view>
              </view>
              <view class="item-delete" 
                    @tap="delItem" 
                    data-id="{{list.id}}"
                    data-outidx="{{idx}}"
                    data-inidx="{{indx}}">删除</view>
              </view>
           </view>
        </view>
