  <view wx:if="{{collectList.length?true:false}}">
        <view class="comm-item" 
              wx:for="{{collectList}}" 
              wx:key="{{index}}" 
              wx:for-index="idx">
            <view class="item-main">
              <view class="time">{{item.date}}</view>
              <view class="in-item" 
                    wx:for="{{item.list}}" 
