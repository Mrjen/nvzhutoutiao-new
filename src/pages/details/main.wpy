                        src="../image/h_nice.png"/> 
                        {{comm.liketimes}}
                </view>

                <block>
                    <button class="same-comm" 
                            wx:if="{{is_accredit=='0'?true:false}}" 
                            lang="zh_CN"  
                            open-type="getUserInfo" 
