          this.toastShow = !this.toastShow;
          setTimeout(() => {
            that.toastShow = !that.toastShow;
            that.$apply();
          }, 2000);
          this.$apply();
        }
      }
      this.$apply();
    },
    // 获取用户信息
    async getUserInfo(e) {
      let userInfo = e.detail.userInfo;
      if (!userInfo) return;
      userInfo.is_accredit = 1;
      this.userInfo = userInfo;
      let _userInfo = await wxRequest(api.saveUserInfo, userInfo);
      if (_userInfo.data.code === api.STATUS) {
        this.is_accredit = 1;
        this.inputFcus = true;
        this.inputShow = true;
      }
      this.$apply();
    },

    // 去用户中心
    toUserCenter(user_id, is_self) {
      console.log('用户id', user_id, is_self);
      if (is_self !== 1) {
        wx.navigateTo({
          url: `../otherUserCenter/main?user_id=${user_id}`
        });
      }
    }
  }

  // 触底加载更多
    async LoadMore(){
      console.log('触底了');
      let more = await wxRequest(api.commentList, {
        page: this.page,
        id: this.ArticleId
      });
      console.log('more', more);
      if (more.data.code === api.STATUS) {
        if (more.data.data.length > 0) {
          let oldList = this.comment;
          this.comment = [...oldList, ...more.data.data];
          wx.setStorage({key: 'comment', data:this.comment});
          this.page++;
          this.$apply();
        }
      }
    }
}
