                          <image class="commentTalk" mode="widthFix" src="../image/commentTalk.png"/>
                    </button>
                <image wx:else class="commentTalk" mode="widthFix"
                      @tap="followCommentComment({{comm.id}}, {{cidx}}, {{comm.user_id}},'最新评论一级', {{comm.nickName}})" 
