  <!-- loading -->
  <view class="loading" wx:if="{{pageLoad}}">
      <image mode="widthFix" style="width:100rpx;height:100rpx" src="https://gcdn.playonwechat.com/nvzhu/Spinner-1s-100px.gif"/>
