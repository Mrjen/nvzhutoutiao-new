                      </button>
                      <view class="same-comm" 
                            wx:else 
                            @tap="followFollowComment({{follow.user_id}}, {{comm.id}}, {{fidx}}, {{cidx}}, '精彩评论二级', {{follow.nickName}},{{follow.follow_comment}})"></view>
                    </view>

                  </view>
                </view>

              <block>
              <button class="talker" 
                      open-type="getUserInfo"  
                      lang="zh_CN" 
                      @getuserinfo="getUserInfo" 
